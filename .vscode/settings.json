{
    "ruff.args": [
        "--config=${workspaceFolder}/ruff.toml"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "python.formatting.provider": "none"
}